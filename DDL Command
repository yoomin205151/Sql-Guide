-- Crear una Tabla:

CREATE TABLE MiTabla (
    ID INT PRIMARY KEY,
    Nombre VARCHAR(50),
    Edad INT
);

-- Modificar una Tabla (Agregar Columna):

ALTER TABLE MiTabla
ADD Telefono VARCHAR(15);


-- Modificar una Tabla (Eliminar Columna):

ALTER TABLE MiTabla
DROP COLUMN Edad;


-- Modificar una Tabla (Modificar Tipo de Columna):

ALTER TABLE MiTabla
ALTER COLUMN Nombre NVARCHAR(50);


-- Eliminar una Tabla:

DROP TABLE MiTabla;


